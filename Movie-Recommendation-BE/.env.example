# Copy this file to .env and fill in production values.
# Do NOT commit your real secrets to version control.

# Django
SECRET_KEY=replace-me-with-a-secure-random-string
DEBUG=False
# Recommended local/dev entries included for convenience. Remove in production.
ALLOWED_HOSTS=example.com,www.example.com,127.0.0.1,localhost

# Database (use a proper Postgres URL in production)
# Example: postgres://user:password@db.example.com:5432/dbname
DATABASE_URL=

# Redis / cache
REDIS_URL=redis://127.0.0.1:6379/0

# Celery (optional)
CELERY_BROKER_URL=redis://127.0.0.1:6379/1
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/2

# External APIs
TMDB_API_KEY=
TMDB_BASE_URL=https://api.themoviedb.org/3

# Features / toggles
SHOW_SWAGGER=False

# CORS / CSRF
# Comma-separated lists. Example: https://app.example.com,http://localhost:3000
CSRF_TRUSTED_ORIGINS=
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Optional monitoring / tracing
SENTRY_DSN=

# Other env notes:
# - When deploying, ensure ALLOWED_HOSTS is set to your real hostnames.
# - Keep SECRET_KEY secret and rotate if leaked.
